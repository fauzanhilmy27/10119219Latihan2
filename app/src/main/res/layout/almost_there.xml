<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru_muda">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Almost There"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="170dp"/>
        <TextView
            android:id="@+id/das"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="thank you for resgiter whit us. one more"
            android:textColor="@color/white"
            android:layout_below="@id/text1"
            android:layout_marginLeft="57dp"
            />
        <TextView
            android:id="@+id/wdks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/das"
            android:layout_marginLeft="120dp"
            android:text="Step Check your email"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/wdkd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wdks"
            android:layout_marginLeft="120dp"
            android:text="to arcive your acount"
            android:textColor="@color/white" />
        <RelativeLayout
            android:id="@+id/very"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_below="@+id/wdkd"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_transparent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="123dp"
                android:paddingTop="11dp"
                android:text="VERIFY"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>